{
    "name": "codemirror-lang-perl",
    "version": "0.1.0",
    "description": "Perl language support for CodeMirror",
    "license": "MIT",
    "scripts": {
        "format:prettier": "prettier --write .",
        "lint:eslint": "eslint . --fix",
        "generate-parser": "node generate-parser.js",
        "build:parser": "NODE_OPTIONS='--no-warnings=ExperimentalWarning' rollup -c",
        "build": "node generate-parser.js && npm run build:parser",
        "watch:terms": "node generate-parser.js -w",
        "watch": "NODE_OPTIONS='--no-warnings=ExperimentalWarning' rollup -cw",
        "test": "mocha"
    },
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "exports": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
    },
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "dependencies": {
        "@codemirror/language": "^6.10.2",
        "@lezer/highlight": "^1.2.0",
        "@lezer/lr": "^1.4.1"
    },
    "devDependencies": {
        "@codemirror/autocomplete": "^6.17.0",
        "@lezer/generator": "^1.7.1",
        "@stylistic/eslint-plugin": "^2.3.0",
        "@types/mocha": "^10.0.7",
        "eslint": "^9.7.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-mocha": "^10.4.3",
        "mocha": "^10.6.0",
        "prettier": "^3.3.2",
        "rollup": "^4.18.1",
        "rollup-plugin-dts": "^6.1.1",
        "rollup-plugin-ts": "^3.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.0.0-alpha.44"
    },
    "overrides": {
        "@stylistic/eslint-plugin": {
            "eslint": ">=9.6.0"
        }
    }
}
